{
    "name": "@blowater/nostr-sdk",
    "version": "0.1.3",
    "exports": "./nostr.ts",
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 110,
        "exclude": ["cov_profile"]
    },
    "compilerOptions": {
        "verbatimModuleSyntax": true
    },
    "lint": {
        "rules": {
            "exclude": [
                "prefer-const",
                "no-slow-types",
                "require-await",
                "verbatim-module-syntax",
                "ban-types"
            ]
        },
        "exclude": ["scure.ts", "**/*.test.ts"]
    },
    "test": {
        "exclude": ["relay-pool.test.ts", "relay-single.test.ts", "websocket.test.ts"]
    },
    "imports": {
        "@blowater/collections": "jsr:@blowater/collections@^0.0.0-rc1",
        "@blowater/csp": "jsr:@blowater/csp@1.0.0",
        "@noble/ciphers": "npm:@noble/ciphers@0.4.1",
        "@noble/curves": "npm:@noble/curves@1.4.0",
        "@noble/hashes": "npm:@noble/hashes@1.4.0",
        "@noble/secp256k1": "jsr:@noble/secp256k1@2.1.0",
        "@scure/bip32": "npm:@scure/bip32@1.3.2",
        "@scure/bip39": "npm:@scure/bip39@1.2.1",
        "@std/assert": "jsr:@std/assert@0.226.0",
        "@std/datetime": "jsr:@std/datetime@0.224.1",
        "@std/encoding": "jsr:@std/encoding@0.224.3",
        "zod": "npm:zod@3.23.8"
    }
}
